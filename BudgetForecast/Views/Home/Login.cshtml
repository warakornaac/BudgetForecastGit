
@model BudgetForecast.Models.LoginUserViewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<br>
<br>
<div class="card card-container">
    <img class="profile-img-card" src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQAzi4ScYniXGTTD3-dd-YeqFThwCv47pBwDRt2LohsZQ&s?sz=120" alt="" />
    @*<img id="profile-img" class="profile-img-card" src="//ssl.gstatic.com/accounts/ui/avatar_2x.png" />*@
    <p id="profile-name" class="profile-name-card"></p>

    <form class="form-signin form-horizontal" method="POST" action="@Url.Action("Login", "Home")">
        <input type="text" name="User" id="inputEmail" class="form-control" placeholder="Username" required autofocus>

        <div class="input-group-btn">
            <div class="input-group-prepend">
                <input type="password" name="Password" id="inputPassword" class="form-control" placeholder="Password" required>
                <span class="input-group-text" style="max-height: 44px; cursor: pointer; margin-left: -2px;" onclick="showPassword();"><i class="fa fa-eye"> </i></span>
            </div>
        </div>
        <div id="remember" class="checkbox">
            @*<label>
            <input type="checkbox" value="remember-me"> Show Password
        </label>*@
            @*<label>
            <input type="checkbox" onclick="showPassword();"> Show Password
        </label>*@
        </div>
        <button class="btn btn-lg btn-primary btn-block btn-signin" type="submit">Sign in</button>
    </form>
    @*<a href="#" class="forgot-password">
            Forgot the password?
        </a>*@
</div><!-- /card-container -->
<script defer>
    function showPassword() {
        var x = document.getElementById("inputPassword");
        if (x.type === "password") {
            x.type = "text";
        } else {
            x.type = "password";
        }
    }
</script>